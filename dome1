            //listBox1.Items.Add(_comPLC.Parity);
            //listBox1.Items.Add(_comPLC.DataBits);
            //listBox1.Items.Add(_comPLC.StopBits);
            listBox1.Items.Add("COM Poart: "+_comPLC.PortName + " , "+_comPLC.BaudRate + " , " + _comPLC.Parity + " , " + _comPLC.DataBits + " , " + _comPLC.StopBits + " ;");
            listBox1.Items.Add("--------------------------------------------------------------------------");
            _comPLC.Open(); //open COM1
            _comPLC.Close(); // close COM1
        }
