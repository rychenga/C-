        //宣告 port
        private SerialPort _comPLC;

        public Form1()
        {
            InitializeComponent();

            //INPUT COM
            //_comPLC = new SerialPort("COM1", 115200, Parity.None, 8, StopBits.One); 預設
            //_comPLC = new SerialPort();
            //_comPLC = new SerialPort("COM1", 115200);
            _comPLC = new SerialPort("COM1", 115200, Parity.Even,8 ,StopBits.Two);
        }

        private void button1_Click(object sender, EventArgs e)
        {
            //textBox1.Text = _comPLC.Parity.ToString();
            //MessageBox.Show(_comPLC.StopBits.ToString());
            //listBox1.Text = _comPLC.PortName;
            //listBox1.Items.Add(_comPLC.PortName);
